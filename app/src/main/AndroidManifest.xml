<manifest
    package="com.example.android.sampletvinput"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Required to play internet-based streaming contents. -->
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Required to update or read existing channel and program information in TvProvider. -->
    <uses-permission android:name="com.android.providers.tv.permission.READ_EPG_DATA" />

    <!-- Required to update channel and program information in TvProvider. -->
    <uses-permission android:name="com.android.providers.tv.permission.WRITE_EPG_DATA" />

    <!-- Required to sync EPG data after reboot. For details,
    please see {@link JobInfo.Builder#setPersisted}-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <!--
    Required to expose this app in the store only when the device has TV input framework
    with the TV app.
    -->
    <uses-feature
        android:name="android.software.live_tv"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:banner="@drawable/banner_iptv"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@drawable/ic_launcher_round"
        android:label="@string/app_name"
        android:logo="@drawable/banner_iptv">
        <activity
            android:name="com.example.android.sampletvinput.activities.CumulusVideoPlayback"
            android:exported="true"
            android:label="Test Stream"
            android:theme="@style/Theme.AppCompat" />

        <activity
            android:name="com.example.android.sampletvinput.activities.MainActivity"
            android:exported="true"
            android:label="CumulusTV"
            android:theme="@style/CompatThemeActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <!-- Plugin -->
        <activity
            android:name="com.example.android.sampletvinput.plugins.MainPicker"
            android:enabled="true"
            android:exported="true"
            android:label="Create a Channel"
            android:theme="@style/CompatTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Can be a shortcut -->
            <intent-filter>
                <action android:name="com.example.android.sampletvinput.ADD_CHANNEL" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Can import .m3u files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>

            <!-- Can read .m3u8 files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u8" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u8" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u8" />
            </intent-filter>

            <!-- Can read text files potentially -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:pathPattern=".*\\.m3u8" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.example.android.sampletvinput.plugins.DataReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.android.sampletvinput.RECEIVER" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="dfe843f8af6acfe924ff6efa0c816fda4ece9f5c" />

        <activity
            android:name="com.example.android.sampletvinput.Intro.Intro"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name="com.example.android.sampletvinput.tv.activities.LeanbackActivity"
            android:label="@string/app_name"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Leanback">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.android.sampletvinput.tv.activities.DetailsActivity"
            android:theme="@style/Theme.Leanback" />

        <!-- This service is only used on devices with API v17+ -->
        <activity android:name="com.example.android.sampletvinput.activities.CumulusDreamsSettingsActivity" />

        <service
            android:name="com.example.android.sampletvinput.services.CumulusDreams"
            android:permission="android.permission.BIND_DREAM_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- Point to additional information for this dream -->
            <meta-data
                android:name="android.service.dream"
                android:resource="@xml/cumulus_dreams_info" />
        </service>

        <activity android:name="com.example.android.sampletvinput.activities.PlaybackQuickSettingsActivity"
            android:exported="true"
            android:theme="@style/Theme.Panel"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.android.sampletvinput.activities.HomepageWebViewActivity" />

        <receiver android:name="com.example.android.sampletvinput.widget.ChannelShortcut"
            android:enabled="true"
            android:label="Channel Shortcut"
            android:exported="true">
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/channel_widget" />
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.example.android.sampletvinput.activities.WidgetSelectionActivity"
            android:exported="true"
            android:theme="@style/CompatTheme">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>

        <activity android:name="com.example.android.sampletvinput.activities.FileIoTestActivity"
            android:enabled="true"
            android:theme="@style/CompatTheme"
            android:exported="true" />

        <service android:name="com.example.android.sampletvinput.services.CumulusJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:enabled="true" />

        <receiver android:name="com.example.android.sampletvinput.receivers.TvBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity android:name="com.example.android.sampletvinput.tv.activities.TifSetupActivity"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="com.example.android.sampletvinput.tv.CumulusTvTifService"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher"
            android:permission="android.permission.BIND_TV_INPUT">
            <!-- Required filter used by the system to launch our account service. -->
            <intent-filter>
                <action android:name="android.media.tv.TvInputService" />
            </intent-filter>
            <meta-data
                android:name="android.media.tv.input"
                android:resource="@xml/tv_service" />
        </service>

        <activity android:name="com.example.android.sampletvinput.plugins.ListingPlugin"
            android:theme="@style/CompatTheme"
            android:label="@string/add_jsonlisting"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.example.android.sampletvinput.ADD_CHANNEL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- Can import .m3u files -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="https" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:pathPattern=".*\\.m3u" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.android.sampletvinput.activities.SettingsActivity"
            android:theme="@style/LeanbackPreferences"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES" />
            </intent-filter>
        </activity>

        <activity android:name="com.example.android.sampletvinput.plugins.JsonListingPanelActivity"
            android:exported="true"
            android:theme="@style/Theme.Panel"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service android:name="com.example.android.sampletvinput.services.CumulusBrowseService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name=
                    "android.media.browse.MediaBrowserService"/>
            </intent-filter>
        </service>

        <meta-data android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc"/>
    </application>

</manifest>